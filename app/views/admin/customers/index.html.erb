<h1>会員一覧</h1>

<% @customers.each do |customer| %>

<div>
<p>氏名</p>
   <%= link_to admin_customer_path(customer.id) do %>
 <%= customer.name %>
 
 <p>メールアドレス</p>
  <%= customer.email %>
  
  <p>ステータス</p>
  
  <% if customer.status === "normal" %>
    <span class="bg-blue-100 text-blue-800 text-xs font-semibold p-2 rounded">有効</span>
   
  <% elsif customer.status === "withdrawn" %>
    <span class="bg-orange-100 text-orange-500 text-xs font-semibold p-2 rounded">退会</span>
   
　<% else %>
    <span class="bg-red-100 text-red-800 text-xs font-semibold p-2 rounded">Banned</span>

</div>
  <% end %>