<h2>商品編集</h2>
<%= form_with model: @item,url: admin_item_path do |f| %>
<label for="inputImage">ProfileImage</label>
  <%= f.file_field :item_image, placeholder: "商品画像", accept: "image/*" %>

  <label for="inputName">商品名</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>

  <label for="Introduction">商品詳細</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%>


<label for="Price">税抜価格</label>
  <%= f.text_field :price, autofocus: true, id:"inputprice", placeholder:"Price"%>



  <%= f.submit "変更を保存" %>

<% end %>