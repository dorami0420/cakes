<h1>注文履歴詳細</h1>

<table>
  
<tr>
    <th>購入者</th>
    <td><%= link_to admin_customer_path(@order.customer_id) do %>
    <%= @order.name %>
    <% end %></td>
</tr>  

<tr>
    <th>注文日</th>        
    <td><%= @order.created_at %></td>
</tr>

<tr>
    <th>配送先</th>
    <td><%= @order.shipping_address %><br>
        <%= @order.name %></td>
</tr>        
<tr>        
    <th>支払い方法</th>
    <td><%= @order.payment_method %></td>
</tr>

     
<tr>
  <th>商品名</th>
  <th>単価(税込)</th>
  <th>数量</th>
  <th>小計</th>
</tr>  

  <% @order_d.each do |order| %>
<tr>
        <td><%= order.item.name %></td>
         <td><%= order.item.with_tax_price%></td>
         <td><%= order.amount %></td>
          <td><%= order.subtotal%></td>
          <% @sum += order.subtotal %>
</tr>

        <% end %>
        


  
<tr>
      <th>商品合計</th>
      <td><%= @order.payment_amount - @order.postage %>円</td>
</tr>
<tr>
      <th>送料</th>
          <% @order.postage = 800 %>
      <td><%= @order.postage %>円</td>
</tr>
 
<tr>
        <th>請求金額合計</th>
        <td><%= @order.payment_amount %>円</td>
</tr>


</table>