<h1>Shopping Cart</h1>
<%= button_to "全て削除",  public_cart_items_destroy_all_path, method: :delete %>
<table>
  <thead>
      <th>単価(税込)</th>
      <th>小計</th>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
      <tr>
        <%= image_tag cart_item.item.get_item_image(100, 100) %>
         <td><%= cart_item.item.with_tax_price%></td>
          <td><%= cart_item.subtotal%></td>
          <% @sum +=  (cart_item.item.price * 1.1).floor * cart_item.amount %>
      </tr>
      <%= form_with model: cart_item,url: public_cart_item_path(cart_item), method: :PATCH do |f| %>
        <%= f.select :amount, *[1..3] %>
        <%= f.submit "変更", class:"w-full cursor-pointer focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2" %>
      <% end %>

 <%= link_to "削除", public_cart_item_path(cart_item), method: :delete %>
  <% end %>
  </tbody>

  <p>
  <%= link_to new_public_order_path, class: "btn btn-outline-secondary btn-block" do %>
  情報入力に進む
    <% end %>
    </p>

</table>