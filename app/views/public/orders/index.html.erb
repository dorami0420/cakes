<html>
<h3>注文履歴一覧</h3>

 <table border="1" style="border-collapse: collapse">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>注文詳細</th>

      <th colspan="3"></th>
    </tr>
  </thead>

 <tbody>

   <% @orders.each do |order| %>
   <tr>
<td><%= order.created_at %></td>

<td><%= order.shipping_address %>
<%= order.name %></td>
<td><% order.order_details.each do |order_d| %>
<%= order_d.item.name %>
<% end %></td>
<td><%= order.payment_amount %></td>
<td><%= link_to '注文詳細', order_path(order) %></td>
</tr>

  <% end %>
  </tbody>
</table>
</html>
