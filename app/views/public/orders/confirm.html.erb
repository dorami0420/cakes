<html>
<h4>注文情報確認</h4><tr>
 <%= form_with model: @order, url: public_orders_path, method: :post, local: true do |f| %>
<table border="1" style="border-collapse: collapse">
  <th>商品名</th>
  <th>単価(税込)</th>
  <th>数量</th>
  <th>小計</th>
  </tr>

   <% total = 0 %>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
             <%= image_tag cart_item.item.get_item_image(100, 100) %>
            <%= cart_item.item.name %>
          </td>
          <td><%= (cart_item.item.price*1.08).to_i %></td>
          <td><%= cart_item.amount %></td>
          <td>
             <% subtotal = ((cart_item.item.price*cart_item.amount)*1.08).to_i %>
             <%= subtotal %>
           </td>
         </tr>
         <% total += (cart_item.item.price*cart_item.amount)*1.08 %>
     <% end %>
</table>

  <table border="1" style="border-collapse: collapse">
     <tr>
       <th>送料</th>
        <% @order.postage = 800 %>
       <td><%= @order.postage %></td>
      </tr>
     <tr>
       <th>商品合計</th>
       <td><%= total.to_i %></td>
      </tr>
      <tr>
        <th>請求金額</th>
        <% @order.payment_amount = @order.postage + total.to_i %>
        <td><%= @order.payment_amount %></td>
      </tr>
</table>

 <tr>
  <th>支払い方法</th>
  <td><%= @order.payment_method %></td>
 </tr>
 <tr>
   <th>お届け先</th>
   <td>
    <%= @order.postal_code %>
    <%= @order.shipping_address %>
    <%= @order.name %>
   </td>
  </tr>


   <%= f.hidden_field :customer_id %>
   <%= f.hidden_field :postage %>
   <%= f.hidden_field :payment_amount %>
   <%= f.hidden_field :payment_method %>
   <%= f.hidden_field :name %>
   <%= f.hidden_field :shipping_address %>
   <%= f.hidden_field :postal_code %>

  <%= f.submit "注文を確定する", class: "btn btn-success" %>
 <% end %>
 </html>